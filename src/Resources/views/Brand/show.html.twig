{% extends '@SyliusShop/layout.html.twig' %}

{% block title %}{{ brand.name }} ({{ 'ecolos_sylius_brand_plugin.brand' | trans }}){% endblock %}

{% block metatags %}
{% endblock %}

{% block content %}
    <h1>{{ brand.name }} ({{ 'ecolos_sylius_brand_plugin.brand' | trans }})</h1>

    {% if brand.description is not null %}
        <h2>{{ 'sylius.ui.description' | trans }}</h2>

        <div class="ui grid mt-1">
            {{ brand.description | raw }}
        </div>
    {% endif %}

    {% if brand.address is not null %}
        <h2>{{ 'sylius.ui.address' | trans }}</h2>

        <div class="ui grid mt-1">
            {{ brand.address | raw }}
        </div>
    {% endif %}
{% endblock %}
