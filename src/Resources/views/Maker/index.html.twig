{% extends '@SyliusShop/layout.html.twig' %}

{% block metatags %}
{% endblock %}

{% block content %}
    <h1>{{ 'ecolos_sylius_maker_plugin.makers' | trans }}</h1>

    <div class="ui grid mt-1">
        {% for maker in makers if maker.slug | length %}
            <div class="center aligned four wide column">
                <a href="{{ path('ecolos_sylius_maker_plugin_show', { slug: maker.slug }) }}">
                    {{ maker.name }}

                    {% if maker.images.count %}
                        <img class="ui small image centered middle aligned"
                             src="{{ asset('media/image/' ~ maker.images
                                 .first().path) }}" alt="{{ maker.name }}"/>
                    {% endif %}
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
